/*轮播图  */
swiper {
  height: 580rpx;
}
swiper block,
swiper-item,
swiper image{
  height: 100%;
  width: 100%;
}
/*详细信息  */
.detail {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.title {
  font-size: 40rpx;
  color: #567;
}
.phone {
  font-size: 26rpx;
  color: #234;
}
/*评论  */
.command {
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx 25rpx;
}
.top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.top .userName {
  font-size: 40rpx;
  color: #123;
  margin-top: 5rpx;
}
.top .right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.top .right .percent {
  font-size: 25rpx;
  color: tomato;
}
.top .right .topTime { 
  font-size: 25rpx;
  color: #234;
}
.command .middle {
  font-size: 30rpx;
  color: #234;
}
.command .bottom image {
  width: 155rpx;
  height: 155rpx;
  margin-right: 21.8rpx;
}